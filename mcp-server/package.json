{
  "name": "homeassistant-mcp-server",
  "version": "1.0.5",
  "description": "MCP server for Home Assistant integration with WebSocket support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "homeassistant-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:addon": "tsc",
    "dev": "tsx watch src/sse-server.ts",
    "dev:stdio": "tsx watch src/index.ts",
    "start": "node dist/sse-server.js",
    "start:stdio": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "homeassistant",
    "home-assistant",
    "claude",
    "ai",
    "automation",
    "smart-home",
    "mcp",
    "anthropic",
    "hassio",
    "addon",
    "integration",
    "voice-assistant",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.1",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}