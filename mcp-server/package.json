{
  "name": "homeassistant-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Home Assistant integration with WebSocket support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "homeassistant-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:addon": "tsc && cp src/index-addon.ts dist/index-addon.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:addon": "node dist/index-addon.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "home-assistant",
    "websocket",
    "claude",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}