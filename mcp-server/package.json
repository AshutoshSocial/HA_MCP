{
  "name": "homeassistant-mcp-server",
  "version": "1.1.9",
  "description": "MCP server for Home Assistant integration with WebSocket support",
  "main": "dist/index.js",
  "bin": {
    "homeassistant-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:addon": "tsc",
    "dev": "tsx watch src/sse-server.ts",
    "dev:stdio": "tsx watch src/index.ts",
    "start": "node dist/sse-server.js",
    "start:stdio": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "homeassistant",
    "home-assistant",
    "claude",
    "ai",
    "automation",
    "smart-home",
    "mcp",
    "anthropic",
    "hassio",
    "addon",
    "integration",
    "voice-assistant",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.17.1",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
