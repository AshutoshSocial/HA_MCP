{
  "connections": {
    "local": {
      "name": "Local Home Assistant",
      "description": "Connect to Home Assistant running on the same machine",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "addon_local_mcp_claude",
        "node",
        "/app/dist/index.js"
      ],
      "env": {
        "SUPERVISOR_TOKEN": "${SUPERVISOR_TOKEN}",
        "HOMEASSISTANT_URL": "ws://supervisor/core/api/websocket"
      }
    },
    "remote": {
      "name": "Remote Home Assistant",
      "description": "Connect to Home Assistant on another machine",
      "command": "npx",
      "args": [
        "homeassistant-mcp-client",
        "--url",
        "${HA_URL}",
        "--token",
        "${HA_TOKEN}"
      ],
      "env": {
        "HA_URL": "${HA_URL}",
        "HA_TOKEN": "${HA_TOKEN}"
      }
    },
    "cloud": {
      "name": "Home Assistant Cloud",
      "description": "Connect through Nabu Casa Cloud",
      "command": "npx",
      "args": [
        "homeassistant-mcp-client",
        "--url",
        "${CLOUD_URL}",
        "--token",
        "${HA_TOKEN}",
        "--cloud"
      ],
      "env": {
        "CLOUD_URL": "${CLOUD_URL}",
        "HA_TOKEN": "${HA_TOKEN}"
      }
    }
  },
  "environment_variables": {
    "SUPERVISOR_TOKEN": {
      "description": "Home Assistant Supervisor token for local connections",
      "required": true,
      "example": "eyJ0eXAiOiJKV1QiLCJhbGc..."
    },
    "HA_URL": {
      "description": "Home Assistant URL for remote connections",
      "required": false,
      "example": "http://192.168.1.100:8123"
    },
    "HA_TOKEN": {
      "description": "Long-lived access token from Home Assistant",
      "required": false,
      "example": "eyJ0eXAiOiJKV1QiLCJhbGc..."
    },
    "CLOUD_URL": {
      "description": "Nabu Casa Cloud URL",
      "required": false,
      "example": "https://your-home.ui.nabu.casa"
    }
  }
}