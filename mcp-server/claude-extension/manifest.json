{
  "name": "homeassistant-mcp",
  "version": "1.0.4",
  "description": "Control your Home Assistant smart home with Claude AI using natural language",
  "author": "Matt Busi",
  "homepage": "https://github.com/mtebusi/HA_MCP",
  "license": "MIT",
  "mcp_version": "1.0.0",
  "platforms": ["macos", "windows", "linux"],
  "mcp_servers": {
    "homeassistant": {
      "name": "Home Assistant MCP Server",
      "description": "Bridge between Claude and Home Assistant for smart home control",
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "addon_local_mcp_claude",
        "node",
        "/app/dist/index.js"
      ],
      "env": {
        "SUPERVISOR_TOKEN": "${SUPERVISOR_TOKEN}",
        "HOMEASSISTANT_URL": "ws://supervisor/core/api/websocket"
      },
      "required_env": ["SUPERVISOR_TOKEN"],
      "features": [
        "query",
        "control",
        "monitor",
        "assist"
      ],
      "capabilities": {
        "tools": 4,
        "operations": 40,
        "realtime": true,
        "websocket": true,
        "security": "token-based"
      }
    }
  },
  "configuration": {
    "setup_required": true,
    "home_assistant_addon": true,
    "min_ha_version": "2024.10.0",
    "architectures": ["armhf", "armv7", "aarch64", "amd64", "i386"]
  },
  "keywords": [
    "home-assistant",
    "smart-home",
    "automation",
    "claude",
    "ai",
    "mcp",
    "iot",
    "voice-control"
  ]
}