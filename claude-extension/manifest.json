{
  "name": "homeassistant-mcp",
  "version": "1.0.4",
  "description": "Control your Home Assistant smart home with Claude AI using natural language",
  "author": "Matt Busi",
  "license": "MIT",
  "homepage": "https://github.com/mtebusi/HA_MCP",
  "mcp": {
    "version": "1.0.0",
    "transport": "stdio",
    "executable": "docker",
    "args": [
      "exec",
      "-i",
      "addon_local_mcp_claude",
      "node",
      "/app/dist/index.js"
    ],
    "env": {
      "SUPERVISOR_TOKEN": "${SUPERVISOR_TOKEN}",
      "HOMEASSISTANT_URL": "ws://supervisor/core/api/websocket"
    }
  },
  "requirements": {
    "homeassistant": ">=2024.10.0",
    "addon": "mcp_claude",
    "docker": true
  },
  "features": [
    "Query states and history",
    "Control devices and services",
    "Create automations",
    "Monitor real-time events",
    "Analyze energy usage",
    "Security auditing",
    "Performance optimization"
  ],
  "tools": [
    {
      "name": "query",
      "description": "Get information from Home Assistant",
      "operations": [
        "entities",
        "state",
        "history",
        "areas",
        "devices",
        "services",
        "config",
        "templates",
        "integrations",
        "addons",
        "logs"
      ]
    },
    {
      "name": "control",
      "description": "Execute actions in Home Assistant",
      "operations": [
        "call_service",
        "toggle",
        "set_value",
        "scene_activate",
        "script_run",
        "reload_integration",
        "create_automation",
        "backup_create",
        "recorder_purge"
      ]
    },
    {
      "name": "monitor",
      "description": "Real-time monitoring and events",
      "operations": [
        "subscribe",
        "unsubscribe",
        "get_events",
        "fire_event",
        "diagnostics",
        "trace_automation",
        "websocket_commands"
      ]
    },
    {
      "name": "assist",
      "description": "AI-enhanced operations",
      "operations": [
        "suggest_automation",
        "analyze_patterns",
        "optimize_energy",
        "security_check",
        "troubleshoot",
        "explain_state",
        "validate_config",
        "performance_analysis",
        "generate_lovelace",
        "migration_check",
        "blueprint_import"
      ]
    }
  ]
}